<nav id="nav" class="nav hidden md:flex">

    <ul class="menu flex flex-col md:flex-row items-center list-reset text-lg">

        {% for item in navigation.main %}

        <li class="level-1 mb-4 md:mr-4 md:mb-0">

            <a href="{{ item.url | safe }}" class="link font-normal text-black hover:text-blue-500 active:text-blue-500 {% if page.url == item.url %}active text-blue-500{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>

        </li>

        {% endfor %}
    </ul>

</nav>
